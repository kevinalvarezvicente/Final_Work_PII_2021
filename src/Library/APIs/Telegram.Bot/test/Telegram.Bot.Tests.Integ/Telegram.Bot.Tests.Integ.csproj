  <ItemGroup>
    <ProjectReference Include="..\..\src\Telegram.Bot\Telegram.Bot.csproj" />
  </ItemGroup>
  <ItemGroup>
    <None Update="appsettings.Development.json" 
          CopyToOutputDirectory="Always"
          Condition="Exists('appsettings.Development.json')" />
